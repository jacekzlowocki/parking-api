{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  },
  "include": [ "src/**/*"],
  "exclude" : ["tests/**/*.test.ts"]
}
