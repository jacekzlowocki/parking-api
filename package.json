{
  "name": "parking-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run swagger && tsc",
    "prestart-dev": "npm run swagger",
    "start-dev": "concurrently 'nodemon' 'nodemon -x npm run swagger'",
    "start": "node build/index.js",
    "lint": "eslint '**/*.ts'",
    "lint-fix": "eslint --fix '**/*.ts'",
    "prettier": "prettier --check --ignore-unknown '**/*.ts'",
    "prettier-fix": "prettier --write --ignore-unknown '**/*.ts'",
    "typecheck": "npx tsc-files --noEmit --pretty",
    "swagger": "tsoa spec-and-routes",
    "test": "jest --runInBand",
    "prepare": "npx husky install"
  },
  "keywords": [],
  "author": "Jacek ZÅ‚owocki",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "date-fns": "^3.3.0",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.0.1",
    "typeorm": "^0.3.19",
    "uuid": "^9.0.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts",
    "ignore": [
      "src/routes"
    ]
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run prettier-fix",
      "npm run lint-fix",
      "npm run typecheck"
    ]
  }
}
