{
  "name": "parking-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run swagger",
    "build": "tsc",
    "prestart-dev": "npm run swagger",
    "start-dev": "concurrently 'nodemon' 'nodemon -x tsoa spec'",
    "lint": "eslint '**/*.ts'",
    "lint-fix": "eslint --fix '**/*.ts'",
    "prettier": "prettier --check --ignore-unknown '**/*.ts'",
    "prettier-fix": "prettier --write --ignore-unknown '**/*.ts'",
    "typecheck": "tsc --noEmit --project ./tsconfig.json",
    "swagger": "tsoa spec",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "npx husky install"
  },
  "keywords": [],
  "author": "Jacek ZÅ‚owocki",
  "license": "ISC",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.0.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run prettier-fix",
      "npm run lint-fix",
      "npx tsc-files --noEmit --pretty"
    ]
  }
}
